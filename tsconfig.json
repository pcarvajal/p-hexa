{
  "compilerOptions": {
    "lib": ["es2024"],
    "module": "CommonJS",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "paths": {
      "@apps/*": ["src/apps/*"],
      "@gateway/*": ["src/gateway/*"],
      "@shared/*": ["src/shared/*"],
    },
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
